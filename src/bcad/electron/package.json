{
  "name": "bcad",
  "version": "42.42.42",
  "description": "Electron client for BCad.",
  "main": "./out/main.js",
  "config": {
    "configuration": "Debug"
  },
  "scripts": {
    "compile": "tsc -p ./",
    "collect-styles": "npm run collect-styles:xp && npm run collect-styles:98 && npm run collect-styles:7",
    "collect-styles:xp": "npx copyfiles --error --flat --verbose ./node_modules/xp.css/dist/xp.css ./src/client/resources",
    "collect-styles:98": "npx copyfiles --error --flat --verbose ./node_modules/xp.css/dist/98.css ./src/client/resources",
    "collect-styles:7": "npx copyfiles --error --flat --verbose ./node_modules/7.css/dist/7.css ./src/client/resources",
    "build-all": "npm run compile && npm run build-assets && npm run collect-styles",
    "build-assets": "npm run build-icons && npm run build-server",
    "build-icons": "icon-gen -i ./bcad.svg -o ./out --ico name=bcad sizes=32",
    "build-server": "run-script-os",
    "build-server:darwin:linux": "pwsh ./build-server.ps1 -configuration $npm_package_config_configuration",
    "build-server:win32": "pwsh ./build-server.ps1 -configuration %npm_package_config_configuration%",
    "watch": "tsc -watch -p ./",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "pack-all": "run-script-os",
    "pack-all:darwin:linux": "pwsh ./pack-all.ps1 -configuration $npm_package_config_configuration",
    "pack-all:win32": "pwsh ./pack-all.ps1 -configuration %npm_package_config_configuration%",
    "pack": "npm run build-all && npm run pack-all",
    "start": "npm run compile && electron ./out/main.js -- debug local"
  },
  "repository": "https://github.com/ixmilia/bcad",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "IxMilia",
  "license": "MIT",
  "devDependencies": {
    "electron": "12.0.1",
    "electron-packager": "^15.2.0",
    "icon-gen": "2.0.0",
    "run-script-os": "1.1.1",
    "tslint": "6.1.1",
    "typescript": "4.2.3"
  },
  "dependencies": {
    "7.css": "^0.4.1",
    "electron-is-dev": "^2.0.0",
    "resize-observer": "^1.0.0",
    "vscode-jsonrpc": "5.0.1",
    "xp.css": "^0.2.4"
  }
}
